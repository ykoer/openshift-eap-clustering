{
    "apiVersion": "v1",
    "kind": "Template",
    "labels": {
        "template": "BUILD_TEMPLATE"
    },
    "metadata": {
        "annotations": {
            "description": "Build Template",
            "iconClass": "icon-jboss",
            "tags": "${app}"
        },
        "labels": {
            "app": "${app}"
        },
        "name": "${app}",
        "resourceVersion": "1"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "ImageStream",
            "metadata": {
                "labels": {
                    "application": "${app}"
                },
                "name": "${app}"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "BuildConfig",
            "metadata": {
                "labels": {
                    "application": "${app}"
                },
                "name": "${app}"
            },
            "spec": {
                "nodeSelector": null,
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${app}:latest"
                    }
                },
                "postCommit": {},
                "resources": {
                    "limits": {
                        "cpu": "1",
                        "memory": "1Gi"
                    }
                },
                "runPolicy": "Serial",
                "source": {
                    "git": {
                        "ref": "master",
                        "uri": "https://github.com/ykoer/openshift-eap-clustering.git"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "sourceStrategy": {
                        "forcePull": true,
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "jboss-eap71-openshift:1.3",
                            "namespace": "openshift"
                        }
                    },
                    "type": "Source"
                },
                "triggers": [
                    {
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "description": "app name",
            "name": "app",
            "value": "eap-clustering-test"
        }
    ]
}